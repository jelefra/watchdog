{
  "name": "watchdog",
  "version": "1.0.0",
  "description": "Scrape product pages and be notified of price drops.",
  "author": "Jeremy Le Fran√ßois",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-transform-runtime": "^7.7.6",
    "@babel/preset-env": "^7.7.7",
    "@babel/runtime": "^7.6.3",
    "amqplib": "^0.5.5",
    "cron": "^1.7.2",
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.0",
    "puppeteer": "^2.0.0"
  },
  "devDependencies": {
    "babel-jest": "^24.9.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.2.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "build": "babel src -d lib && yarn allowExecution",
    "allowExecution": "chmod 777 lib/amqp/worker.js && chmod 777 lib/amqp/clock.js",
    "format": "prettier --write **/*.{md,yml,js} !lib/** !coverage/**",
    "lint": "eslint ./src --fix",
    "start": "node lib/index.js",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jelefra/watchdog"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 40,
        "functions": 40,
        "lines": 40,
        "statements": -100
      }
    },
    "testMatch": [
      "**/src/**/*.test.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": "12.13.0",
    "yarn": "1.19"
  }
}
